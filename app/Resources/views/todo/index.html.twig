{% extends 'base.html.twig' %}
{% block title %}Todos{% endblock %}
{% block body %}
    <h2 class="page-header">Zadania do zrobienia</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>To do</th>
      <th>Date</th>
      <th>Prority</th>
      <th>Data WYkonania</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
     {% for todo in todos %}
    <tr>
      <th scope="row">{{todo.id}}</th>
      <td>{{todo.Name}}</td>
      <td>{{todo.Description}}</td>
      <td>{{todo.Category}}</td>
      <td>{{todo.DueDate|date('Y-m-d')}}</td>
    
      
      
      <td>
          <a href="/todos/edit/{{todo.id}}" class="btn btn-primary">Edit</a>
          <a href="/todos/details/{{todo.id}}" class="btn btn-success">Details</a>
          <a href="/todos/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
                 
      </td>
     
    </tr>
    {% endfor%}
     
    </tbody>
</table>
{%endblock %}
    